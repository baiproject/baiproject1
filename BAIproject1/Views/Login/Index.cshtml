
@{
    ViewBag.Title = "Index";
}

<h2>Logowanie</h2>

<form action="/login/index" method="get">
    <div class="form-horizontal">
        <div class="form-group">
            @Html.ValidationMessage("error", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.ValidationMessage("blocked", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.ValidationMessage("attempts", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.ValidationMessage("delay", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.Label("username", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="login" value="" />
            </div>
        </div>
        <div class="form-group">
            @Html.Label("password", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="password" name="password" value="" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zaloguj" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>