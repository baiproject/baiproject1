
@{
    ViewBag.Title = "Register";
}

<h2>Rejestracja</h2>

<form action="/login/register" method="get">
    <div class="form-horizontal">
        <div class="form-group">
            @Html.ValidationMessage("error", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.ValidationMessage("exists", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.ValidationMessage("created", new { @class = "text-success" })
        </div>
        <div class="form-group">
            @Html.Label("username", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("login")
            </div>
        </div>
        <div class="form-group">
            @Html.Label("password", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="password" name="password" value="" />                
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zaloguj" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>