@model IEnumerable<BAIproject1.Models.Mask>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<form action="/masklogin/login" method="get">
    <table class="table">
        <tr>
            @for (int i = 0; i < ViewBag.PasswordMask.Count; i++)
            {
                <th>@(i + 1)</th>
            }
        </tr>
        <tr>
            @foreach (bool item in ViewBag.PasswordMask)
            {


                if (item)
                {
                    <td>
                        <input type="text" size="1" maxlength="1" />
                    </td>
                }
                else
                {
                    <td>
                        <input type="text" disabled="disabled" size="1" />
                    </td>
                }



            }
        </tr>
    </table>
    <input type="submit" value="zaloguj"/>
</form>